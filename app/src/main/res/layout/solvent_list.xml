<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="90dp"
    android:layout_margin="3dp"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true"
    android:background="@drawable/selector_button_grey_item_pressed">

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/country_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:contentDescription="icon"
            android:gravity="center"
            android:padding="0dp"


            android:layout_centerInParent="true"
            card_view:srcCompat="@mipmap/ic_launcher"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/country_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/country_photo"
            android:gravity="center"
            android:text="Nama Menu"
            android:textColor="@color/md_grey_900"
            android:textSize="@dimen/textVerySmall"
            android:fontFamily="@font/roboto_regular"
            tools:ignore="HardcodedText" />

    </RelativeLayout>
    <com.bm.main.fpl.templates.shimmer.ShimmerFrameLayout
        android:id="@+id/frame_ribbon"
        android:visibility="gone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="-1dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical"

        app:duration="5000"
        android:layout_gravity="end">

        <ImageView
            android:id="@+id/image_ribbon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            card_view:srcCompat="@drawable/ic_new"
            tools:ignore="ContentDescription" />

    </com.bm.main.fpl.templates.shimmer.ShimmerFrameLayout>
</androidx.cardview.widget.CardView>
