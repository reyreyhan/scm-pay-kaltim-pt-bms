<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_white_1000"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/md_white_1000"
            android:fontFamily="@font/roboto_light"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="Bagikan E-Tiket Via"
            android:textColor="@color/md_black_1000"
            android:textSize="@dimen/textNormal" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="@drawable/drop_shadowbottom" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:id="@+id/imageViewWa"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/ic_share_wa"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/imageViewGmail"
                android:layout_width="0dp"
                android:layout_height="40dp"

                android:layout_weight="1"
                android:visibility="visible"
                android:src="@drawable/ic_share_gmail"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/imageViewYmail"
                android:layout_width="0dp"
                android:layout_height="40dp"

                android:layout_weight="1"
                android:visibility="visible"
                android:src="@drawable/ic_share_ymail"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/imageViewEmail"
                android:layout_width="0dp"
                android:layout_height="40dp"

                android:layout_weight="1"
                android:visibility="visible"
                android:src="@drawable/ic_share_email"
                tools:ignore="ContentDescription" />

        </LinearLayout>


    </LinearLayout>
</FrameLayout>