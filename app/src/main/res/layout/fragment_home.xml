<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/sw_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/standard_margin_2x">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/lbl_welcome"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/subheading" />

                    <RelativeLayout
                        android:id="@+id/ll_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/standard_margin"
                        android:background="@color/bg_gray"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="@dimen/_8sdp">

                        <LinearLayout
                            android:id="@+id/ll_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="@dimen/_52sdp"
                                android:layout_height="@dimen/_52sdp"
                                android:background="@drawable/circle_white"
                                android:padding="@dimen/standard_small_margin">

                                <ImageView
                                    android:id="@+id/iv_photo"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </FrameLayout>

                            <TextView
                                android:id="@+id/tv_caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/standard_xsmall_margin"
                                android:text="Edit Foto"
                                android:textSize="@dimen/caption"
                                android:visibility="gone" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/standard_margin"
                            android:layout_marginLeft="@dimen/standard_margin"
                            android:layout_marginEnd="@dimen/standard_margin"
                            android:layout_marginRight="@dimen/standard_margin"
                            android:layout_toStartOf="@id/ll_omzet"
                            android:layout_toLeftOf="@id/ll_omzet"
                            android:layout_toEndOf="@id/ll_photo"
                            android:layout_toRightOf="@id/ll_photo"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/primaryText"
                                android:textSize="@dimen/caption"
                                android:textStyle="bold"
                                tools:text="Nama Toko" />

                            <TextView
                                android:id="@+id/tv_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="bottom"
                                android:lines="2"
                                android:maxLines="4"
                                android:textColor="@color/secondaryText"
                                android:textSize="@dimen/caption"
                                tools:text="Alamat Toko" />

                            <TextView
                                android:id="@+id/tv_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/standard_xsmall_margin"
                                android:hint="Telepon Toko"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/caption"
                                android:textStyle="bold"
                                tools:text="0812 3456 7890" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_omzet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:gravity="end"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/icon_edit"
                                android:layout_width="@dimen/_14sdp"
                                android:layout_height="@dimen/_14sdp"
                                app:srcCompat="@drawable/ic_edit" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="bottom|end"
                                android:lines="2"
                                android:text="@string/lbl_omset"
                                android:textColor="@color/secondaryText"
                                android:textSize="@dimen/caption" />

                            <TextView
                                android:id="@+id/tv_omset"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/caption"
                                android:textStyle="bold"
                                tools:text="Rp 999.999.999.999" />
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/standard_margin_2x"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/btn_pos"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_accent_4dp"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="@string/btn_pos"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/caption"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/btn_ppob"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/standard_margin_2x"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_accent_outline_4dp"
                            android:gravity="center"
                            android:text="@string/btn_ppob"
                            android:textAllCaps="false"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/caption"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/btn_grocery"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/standard_margin_2x"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_outline_selector"
                            android:enabled="false"
                            android:gravity="center"
                            android:text="@string/btn_grosir"
                            android:textAllCaps="false"
                            android:textColor="@color/qr_button_selector"
                            android:textSize="@dimen/caption"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_lengkapi"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:background="@color/orange"
                    android:text="Lengkapi NIK"
                    android:visibility="visible"
                    app:backgroundTint="@color/orange" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_margin_2x"
                    android:layout_marginBottom="@dimen/standard_margin_2x"
                    android:gravity="center"
                    android:text="@string/lbl_tagline_4"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/caption"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/standard_margin_2x"
                    android:layout_marginRight="@dimen/standard_margin_2x"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</FrameLayout>