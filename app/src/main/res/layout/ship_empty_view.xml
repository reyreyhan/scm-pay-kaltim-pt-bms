<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/empty_view_train">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/avi"

                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:padding="5dp"
               android:src="@drawable/notfound_ship"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opps, Jadwal Kapal Tidak Ditemukan"
                tools:ignore="HardcodedText"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="Sedang memuat halaman"
                tools:ignore="HardcodedText"
                android:layout_gravity="center_horizontal" android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>