<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bm.main.single.ftl.train.activities.TrainSearchActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_white_1000"

        android:fitsSystemWindows="true"
        android:theme="@style/SBFTheme">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:titleEnabled="false">

            <RelativeLayout
                android:id="@+id/relImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageViewSearchTrain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"

                        android:src="@drawable/kereta_api_indonesia"
                        app:layout_collapseMode="parallax"
                        tools:ignore="ContentDescription" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="?android:attr/actionBarSize"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/linStationAsal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="60dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginEnd="60dp"
                        android:layout_marginRight="60dp"
                        android:orientation="horizontal"
                        android:weightSum="1"
android:background="@color/black_overlay_dark"

                        >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical"


                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_light"
                                android:gravity="center"
                                android:text="Stasiun Asal"
                                android:textColor="@color/md_white_1000"
                                android:textSize="@dimen/textSmall"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/textViewNamaStationAsal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:fontFamily="@font/roboto_medium"

                                android:gravity="center"
                                android:hint="Station Asal"

                                android:textColor="@color/md_white_1000"
                                android:textCursorDrawable="@drawable/text_cursor_white"
                                android:textSize="@dimen/textMedium"
                                tools:text="Surabaya Gubeng" />


                            <TextView
                                android:id="@+id/textViewKodeNamaStationAsal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:textColor="@color/md_white_1000"
                                android:textStyle="bold"
                                tools:text="Surabaya" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_down_white"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageViewTukarStation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"


                        app:srcCompat="@drawable/ic_swap_vertical_circle_white_48dp"
                        tools:ignore="ContentDescription" />


                    <LinearLayout
                        android:id="@+id/linStationTujuan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="60dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginEnd="60dp"
                        android:layout_marginRight="60dp"
                        android:orientation="horizontal"
                        android:weightSum="1"

                        android:background="@color/black_overlay_dark"
                        >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical"


                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_light"
                                android:gravity="center"
                                android:text="Stasiun Tujuan"
                                android:textColor="@color/md_white_1000"
                                android:textSize="@dimen/textSmall"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/textViewNamaStationTujuan"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/roboto_medium"


                                android:gravity="center"


                                android:textColor="@color/md_white_1000"
                                android:textSize="@dimen/textMedium"
                                tools:text="Gambir" />

                            <TextView
                                android:id="@+id/textViewKodeNamaStationTujuan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:textColor="@color/md_white_1000"
                                android:textStyle="bold"
                                tools:text="Jakarta" />
                            <!--</android.support.design.widget.TextInputLayout>-->
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_down_white"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"


                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="Tanggal Berangkat"
                android:textColor="@color/md_blue_500"
                android:textSize="@dimen/textSmall" />

            <LinearLayout
                android:id="@+id/linTanggalBerangkat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/selector_button_blue_white_pressed"
                android:gravity="center"
                android:orientation="horizontal"


                >

                <TextView
                    android:id="@+id/textViewTanggalBerangkat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_medium"

                    android:gravity="center"


                    android:textColor="@color/md_blue_500"
                    android:textSize="@dimen/textLarge"
                    tools:text="20" />

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="2"

                    >

                    <TextView
                        android:id="@+id/textViewBulanBerangkat"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_regular"


                        android:gravity="center"
                        android:textColor="@color/md_blue_500"
                        android:textSize="@dimen/textNormalCaption"
                        tools:text="Agustus" />

                    <TextView
                        android:id="@+id/textViewHariTahunBerangkat"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_light"

                        android:gravity="center"

                        android:textColor="@color/md_blue_500"
                        android:textSize="@dimen/textSmall"
                        tools:text="Minggu 2019" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:adjustViewBounds="true"

                    android:src="@drawable/ic_down_primary"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="Jumlah Penumpang"
                android:textColor="@color/md_blue_500"
                android:textSize="@dimen/textSmall" />

            <LinearLayout
                android:id="@+id/linMainJumlahPenumpang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/selector_button_blue_white_pressed"
                android:orientation="horizontal"
                android:weightSum="2"


                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/selector_button_blue_white_pressed"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_adult_primary"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/textViewJumlahDewasa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/textMedium" />

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_down_primary"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="Dewasa"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textNormal" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/selector_button_blue_white_pressed"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_baby_primary"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/textViewJumlahBayi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/textMedium" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_down_primary"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="Bayi"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textNormal" />
                </LinearLayout>
            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/appButtonCariKereta"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/selector_button_orange_pressed"
                android:fontFamily="@font/roboto_regular"
                android:text="Cari"
                android:textAllCaps="false"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/textMedium"
                android:textStyle="bold" />

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
