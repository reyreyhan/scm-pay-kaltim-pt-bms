<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:background="@drawable/selector_button_blue_white_pressed">
    <LinearLayout
        android:id="@+id/lin_main_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"

        android:background="@color/md_white_1000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewShipKelas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/md_black_1000"
                    tools:text="Kelas EK1 / A"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Dewasa"

                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/md_black_1000"
                        android:layout_weight=".7"/>
                    <TextView
                        android:id="@+id/textViewPriceAdult"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:text="Rp. 999.999,00"

                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/md_black_1000"
                        android:gravity="end"
                        android:layout_weight="1.3"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(Anak)"
                        android:textSize="@dimen/textVerySmall"
                        android:layout_weight="1.5"/>
                    <TextView
                        android:id="@+id/textViewPriceChild"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Rp. 100.000,00"
                        android:gravity="end"
                        android:textSize="@dimen/textVerySmall"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Bayi"

                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/md_black_1000"
                        android:layout_weight=".7"/>
                    <TextView
                        android:id="@+id/textViewPriceInfant"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:text="Rp. 999.999,00"
                        android:gravity="end"

                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/md_black_1000"
                        android:layout_weight="1.3"/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_logo_pelni"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnPesan"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"

                        android:layout_marginTop="10dp"
                        android:background="@drawable/selector_button_orange_pressed"
                        android:text="PESAN"
                        android:textAllCaps="false"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@android:color/white" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
</RelativeLayout>