<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <com.bm.main.fpl.templates.ticketview.TicketView
        android:id="@+id/ticketView"
        android:layout_width="match_parent"
        android:layout_height="95dp"

        app:ticketBorderColor="@color/colorAccent"
        app:ticketBorderWidth="1dp"
        app:ticketCornerType="rounded"
        app:ticketDividerPadding="18dp"
        app:ticketDividerType="dash"
        app:ticketElevation="8dp"
        app:ticketOrientation="vertical"
        app:ticketScallopPositionPercent="65"
        app:ticketScallopRadius="7dp"
        app:ticketShowBorder="true"
        app:ticketShowDivider="true" />
    <LinearLayout
        android:id="@+id/lin_main_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:weightSum="3"

        >

        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->


        <!--android:orientation="horizontal">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"



            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewNamaKereta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"

                tools:text="Gaya Baru Malam Selatan"
                android:textAllCaps="false"
                android:textColor="@color/md_black_1000"
                android:textSize="@dimen/textNormal"
                android:fontFamily="@font/robotocondensed_regular"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

android:layout_marginLeft="5dp"
android:layout_marginStart="5dp"

                android:orientation="horizontal"


                >


                <TextView
                    android:id="@+id/textViewGrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:gravity="center_vertical"
                    tools:text="Eksekutif"
                    android:fontFamily="@font/robotocondensed_light"
                    android:textColor="@color/md_black_1000"
                    android:textSize="@dimen/textSmall" />

                <TextView
                    android:id="@+id/textViewKelas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    tools:text="(X)"
                    android:fontFamily="@font/robotocondensed_light"
                    android:textColor="@color/md_black_1000"
                    android:textSize="@dimen/textSmall" />
            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone" />
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"

            >

            <LinearLayout
                android:id="@+id/linDown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewJamBerangkat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        tools:text="07:30"
                        android:fontFamily="@font/robotocondensed_regular"
                        android:textColor="@color/md_black_1000"
                        android:textSize="@dimen/textNormal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text=" - "
                        android:textColor="@color/md_black_1000" />

                    <TextView
                        android:id="@+id/textViewJamTiba"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:fontFamily="@font/robotocondensed_regular"
                        tools:text="09:00"
                        android:textColor="@color/md_black_1000"
                        android:textSize="@dimen/textNormal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewOriginCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@color/md_grey_200"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        tools:text="SGU"

                        android:textSize="@dimen/textSmall"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/textViewDurasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:layout_marginRight="15dp"
                        android:layout_marginEnd="15dp"
android:textSize="@dimen/textSmall"
                        android:drawableLeft="@drawable/ic_duration"
                        android:drawableStart="@drawable/ic_duration"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:fontFamily="@font/robotocondensed_regular"
                        tools:text="1j 50m" />

                    <TextView
                        android:id="@+id/textViewDestinationCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:background="@color/md_grey_200"
                        tools:text="GMR"
                        android:textSize="@dimen/textSmall"
                        android:visibility="gone"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"

            >

            <LinearLayout
                android:id="@+id/linHarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
android:layout_marginBottom="5dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                >

                <TextView
                    android:id="@+id/textViewHargaKereta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_vertical|top"
                    android:gravity="center_vertical|end"
                    tools:text="Rp. 1.000.000"
                    android:textColor="@color/md_orange_500"
                    android:textSize="@dimen/textNormal"
                    android:fontFamily="@font/robotocondensed_regular"
                    />

                <TextView
                    android:id="@+id/labelHarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="top|end"
                    android:text=" /org"
                    android:fontFamily="@font/robotocondensed_regular"
                    android:textSize="@dimen/textSmall" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
android:layout_alignParentBottom="true"
                android:layout_below="@+id/linHarga"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|end"
                    android:background="@drawable/ic_seat" />

                <TextView
                    android:id="@+id/textViewJmlKursi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|end"
                    tools:text="Sisa 0 kursi"
                    android:fontFamily="@font/robotocondensed_regular"
                    android:textColor="@color/md_black_1000"
                    android:textSize="@dimen/textSmall" />
            </LinearLayout>


        </RelativeLayout>

        <!--</LinearLayout>-->


    </LinearLayout>

    </LinearLayout>
</RelativeLayout>
