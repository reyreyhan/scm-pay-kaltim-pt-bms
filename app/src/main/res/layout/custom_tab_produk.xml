<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/colorTransparent"
    android:layout_centerInParent="true"
    tools:background="@drawable/unselector_tab_btn_center"
    android:orientation="vertical"
android:id="@+id/linCustomTabProduk"
    android:gravity="center">

    <TextView
        android:id="@+id/textTab"
        android:layout_width="match_parent"
        android:layout_height="40dp"



        android:gravity="center"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_regular"
        tools:text="Beranda"
        tools:textColor="@drawable/unselector_tab_btn_textcolor"
        android:textSize="@dimen/textSmall"
        tools:ignore="HardcodedText" />
    <View
        android:id="@+id/viewItemTabProduk"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        tools:background="@drawable/unselector_indicator_tab_btn_group_home" />
</LinearLayout>