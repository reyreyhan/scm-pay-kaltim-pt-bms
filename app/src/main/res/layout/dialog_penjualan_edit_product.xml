<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/container_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/standard_margin_2x"
        android:layout_marginLeft="@dimen/standard_margin_2x"
        android:layout_marginRight="@dimen/standard_margin_2x">
        <TextView
            android:id="@+id/tv_title_product"
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"
            android:text="Indomie Instant Goreng Special" />
        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_close"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/container_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/container_top"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/standard_margin_2x"
        android:gravity="center">
        <FrameLayout
            android:id="@+id/btn_product_decrease"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginRight="@dimen/standard_margin_3x"
            android:background="@drawable/selector_btn_white_accent"
            android:clickable="true"
            android:paddingHorizontal="@dimen/standard_margin">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_penjualan_decrease"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>
        </FrameLayout>
        <TextView
            android:id="@+id/tv_product_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/_25sdp"
            android:gravity="center"
            android:textStyle="bold"/>
        <FrameLayout
            android:id="@+id/btn_product_increase"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginLeft="@dimen/standard_margin_3x"
            android:background="@drawable/selector_btn_white_accent"
            android:clickable="true"
            android:paddingHorizontal="@dimen/standard_margin">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_penjualan_increase"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />
        </FrameLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_total_harga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/container_count"
        android:layout_marginTop="@dimen/standard_margin_2x"
        android:layout_marginLeft="@dimen/standard_margin_2x"
        android:layout_marginRight="@dimen/standard_margin_2x"
        android:textStyle="bold"
        android:textSize="@dimen/_15sdp"
        android:text="Jumlah 4 x 10 = 40.000"
        android:maxLines="1"
        android:gravity="center"/>
    <LinearLayout
        android:id="@+id/container_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_total_harga"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/standard_margin_2x"
        android:layout_marginTop="@dimen/standard_margin_2x"
        android:weightSum="2"
        android:gravity="center">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_update_barang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_cart_product"
            android:text="Update"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:backgroundTint="@color/colorAccent"
            android:paddingTop="@dimen/standard_margin"
            android:paddingBottom="@dimen/standard_margin"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/subheading"
            android:textStyle="bold"
            android:backgroundTint="@color/md_red_A700"
            app:iconGravity="textStart"
            app:icon="@drawable/ic_delete_black_24dp"
            app:iconPadding="0dp"
            android:layout_marginLeft="@dimen/standard_margin_2x"
            android:paddingTop="@dimen/standard_margin"
            android:paddingBottom="@dimen/standard_margin"/>
    </LinearLayout>
</RelativeLayout>