    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:id="@+id/contentHost">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewCancelBookAwal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardBackgroundColor="@color/colorTransparent"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
           >

            <TextView
                android:id="@+id/dialog_title_awal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:padding="5dp"
                android:text="Apakah anda yakin akan membatalkan pesanan ini ?"

                android:textColor="@color/md_black_1000"
                android:textSize="@dimen/textNormalCaption"
                tools:ignore="HardcodedText" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.bm.main.materialedittext.MaterialEditText
                    android:id="@+id/editTextAlasan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"

                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ 01234567890"
                    android:textCursorDrawable="@drawable/text_cursor_accent"
                    android:textSize="@dimen/textNormal"
                    android:maxLength="100"
                    android:fontFamily="@font/roboto_light"
                    app:met_baseColor="@color/text_secondary"
                    app:met_floatingLabel="highlight"

                    app:met_floatingLabelTextColor="@color/md_black_1000"
                    app:met_floatingLabelAnimating="true"
                    app:met_accentTypeface="@string/roboto_regular"

                    app:met_underlineColor="@color/md_grey_500"
                    app:met_primaryColor="@color/colorAccent_ppob"
                    app:met_singleLineEllipsis="true"
                    app:met_clearButton="true"


                    android:hint="Isi alasan pembatalan" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="3"


                android:layout_marginTop="10dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/dialog_nanti_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"

                    android:background="@drawable/selector_button_orange_pressed"
                    android:text="NANTI"

                    android:textColor="@color/md_white_1000"
                    tools:ignore="HardcodedText" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/dialog_ya_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                   android:layout_marginRight="5dp"
                   android:layout_marginLeft="5dp"
                    android:background="@drawable/selector_button_blue_pressed"
                    android:text="YA"

                    android:textColor="@color/md_white_1000"
                    tools:ignore="HardcodedText" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/dialog_tidak_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"



                    android:background="@drawable/selector_button_blue_white_pressed"
                    android:text="Tidak"
                    android:textColor="@color/md_blue_500"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewCancelBookNanti"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardBackgroundColor="@color/colorTransparent"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"

            android:visibility="gone"
            tools:visibility="visible"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/editTextContentNanti"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"


                    android:textCursorDrawable="@drawable/text_cursor_accent"
                    android:textSize="@dimen/textNormal"
                    android:maxLength="100"
                    tools:text="Kode Booking Anda KJHFJD dengan batas pembayaran 01 Januari 2019 00:00 tersimpan di Menu Pesanan Saya"
                    android:fontFamily="@font/roboto_regular"
                    />

            </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="10dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/dialog_ok_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/selector_button_blue_pressed"
                        android:text="OK"

                        android:textColor="@color/md_white_1000"
                        tools:ignore="HardcodedText" />


                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
