<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"/>
                <LinearLayout
                    android:layout_marginRight="@dimen/standard_margin_3x"
                    android:layout_marginLeft="@dimen/standard_margin_3x"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_marginTop="@dimen/standard_margin_3x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Password Anda"
                        android:textColor="@color/primaryText"
                        android:textStyle="bold"
                        android:textSize="@dimen/body"/>
                    <LinearLayout
                        android:layout_marginTop="@dimen/standard_small_margin"
                        android:background="@drawable/rounded_white_4dp_stroke_gray"
                        android:padding="@dimen/standard_margin_2x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/standard_margin"
                            android:inputType="textPassword"
                            android:id="@+id/et_password"
                            android:textColorHint="@color/secondaryText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:textColor="@color/primaryText"
                            android:textSize="@dimen/subheading"/>
                        <CheckBox
                            android:layout_marginLeft="@dimen/standard_margin"
                            android:id="@+id/btn_password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/selector_password"/>
                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="@dimen/standard_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Password Baru"
                        android:textColor="@color/primaryText"
                        android:textStyle="bold"
                        android:textSize="@dimen/body"/>
                    <LinearLayout
                        android:layout_marginTop="@dimen/standard_small_margin"
                        android:background="@drawable/rounded_white_4dp_stroke_gray"
                        android:padding="@dimen/standard_margin_2x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/standard_margin"
                            android:inputType="textPassword"
                            android:id="@+id/et_new_password"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:textColor="@color/primaryText"
                            android:textSize="@dimen/subheading"/>
                        <CheckBox
                            android:layout_marginLeft="@dimen/standard_margin"
                            android:id="@+id/btn_new_password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/selector_password"/>
                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="@dimen/standard_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Konfirmasi Password"
                        android:textColor="@color/primaryText"
                        android:textStyle="bold"
                        android:textSize="@dimen/body"/>

                    <LinearLayout
                        android:layout_marginTop="@dimen/standard_small_margin"
                        android:background="@drawable/rounded_white_4dp_stroke_gray"
                        android:padding="@dimen/standard_margin_2x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/standard_margin"
                            android:inputType="textPassword"
                            android:id="@+id/et_confirm_password"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:textColor="@color/primaryText"
                            android:textSize="@dimen/subheading"/>
                        <CheckBox
                            android:layout_marginLeft="@dimen/standard_margin"
                            android:id="@+id/btn_confirm_password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/selector_password"/>
                    </LinearLayout>



                </LinearLayout>
                <com.google.android.material.button.MaterialButton
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="@dimen/standard_margin_3x"
                    android:layout_marginBottom="@dimen/standard_margin_2x"
                    android:id="@+id/btn_save"
                    android:layout_width="@dimen/standart_button_width"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/subheading"
                    android:text="@string/btn_save"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:textStyle="bold"
                    app:backgroundTint="@color/orange"
                    />
                <View
                    android:id="@+id/empty_space"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </FrameLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>