<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp"
    >



        <LinearLayout
            android:id="@+id/linMainListProduk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_gravity="center"
            android:orientation="horizontal"
android:weightSum="2"
            android:padding="10dp"
            android:background="@drawable/shape_card_edge_grey"

           >
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1.3"
               android:orientation="vertical">

               <TextView
                   android:id="@+id/textViewKeteranganKomisi"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center_vertical|left"
                   android:layout_gravity="center"
                   tools:text="123456789012"
                   android:textSize="@dimen/textSmall"
                   android:fontFamily="@font/roboto_light"  />


           </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"

                >

                <TextView
                    android:id="@+id/textViewNominalKomisi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center|right"
                    android:layout_gravity="center"
                    tools:text="Rp 100.000"
                    android:textSize="@dimen/textSmall"
                    android:fontFamily="@font/roboto_light"  />
                <TextView
                    android:id="@+id/textViewStatusKomisi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center|right"
                    android:layout_gravity="center"
                    tools:text="Belum Ditransfer"
                    android:textSize="@dimen/textSmall"
                    android:fontFamily="@font/roboto_light"  />

            </LinearLayout>


        </LinearLayout>



</androidx.cardview.widget.CardView>