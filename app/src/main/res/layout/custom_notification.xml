<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/rel_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <ImageView
            android:id="@+id/image_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_launcher"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/image_app"
            android:layout_toRightOf="@+id/image_app"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header"

            tools:text="Title" />

        <TextView
            android:id="@+id/text"
            style="@style/TextAppearance.Compat.Notification.Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_toEndOf="@+id/image_app"
            android:layout_toRightOf="@+id/image_app"

            tools:text="Text" />


        <ImageView

            android:layout_width="20dp"
            android:layout_height="20dp"


            android:layout_below="@+id/image_app"
            android:layout_alignEnd="@+id/image_app"
            android:layout_alignRight="@+id/image_app"
            android:layout_marginTop="-17dp"
            android:layout_marginEnd="-7dp"
            android:layout_marginRight="-7dp"
            android:background="@drawable/grey_shape"
            android:src="@drawable/ic_logo_status_bar"
            tools:ignore="ContentDescription" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/image_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_lyt"
        android:background="@drawable/shape_card_blue_light"


        android:scaleType="fitCenter"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_logo_color" />

</RelativeLayout>