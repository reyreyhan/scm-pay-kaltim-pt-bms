<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    app:cardCornerRadius="5dp"

    app:cardUseCompatPadding="true">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <RadioButton
            android:id="@+id/radioButtonBaggage"
            android:layout_width="75dp"
            android:layout_height="55dp"
            android:layout_margin="3dip"

            android:background="@drawable/rbtn_selector_table"
            android:button="@null"
            android:checked="false"
            android:fontFamily="@font/roboto_medium"

            android:gravity="center"
            android:layout_gravity="center"
            android:padding="2dip"


            android:textAlignment="center"
            android:textColor="@drawable/rbtn_textcolor_selector_table"
            />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/linMainListBaggage"
        android:layout_width="75dp"
        android:layout_height="55dp"
        android:padding="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/selector_card_selected"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitleHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:padding="5dp"
            tools:text="30 kg"
            android:textColor="@android:color/black"
           />


        <TextView
            android:id="@+id/tvTitleContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:padding="5dp"
            tools:text="Rp 300.000"
            android:textColor="@color/md_grey_500"
            android:textSize="@dimen/textVerySmall"
             />


    </LinearLayout>

</androidx.cardview.widget.CardView>