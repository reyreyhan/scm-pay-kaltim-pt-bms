<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/standard_margin_2x"
    android:paddingTop="@dimen/standard_margin"
    android:paddingRight="@dimen/standard_margin_2x">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="@dimen/_64sdp"
                android:layout_height="@dimen/_64sdp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:text="Hapus"
                android:textAllCaps="false"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/caption"
                app:backgroundTint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:maxLines="2"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/body"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_stok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="start"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/caption" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/orange"
                android:textSize="@dimen/body"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="start"
                android:text="Catatan"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/caption" />

            <TextView
                android:id="@+id/tv_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="start"
                android:textColor="@color/divider"
                android:textSize="@dimen/caption" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded_white_4dp_stroke_gray"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_minus"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        app:srcCompat="@drawable/ic_drop_down" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:background="#e1e6ed" />

                    <TextView
                        android:id="@+id/tv_count"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:minWidth="30dp"
                        android:paddingLeft="@dimen/standard_small_margin"
                        android:paddingRight="@dimen/standard_small_margin"
                        android:text="1"
                        android:textSize="@dimen/subheading"
                        android:textColor="@color/orange"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:background="#e1e6ed" />

                    <ImageView
                        android:id="@+id/btn_plus"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:rotation="180"
                        app:srcCompat="@drawable/ic_drop_down" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/standard_margin"
        android:background="@color/divider" />
</LinearLayout>