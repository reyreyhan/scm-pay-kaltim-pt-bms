<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tvEkoNo"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="1"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/md_black_1000"/>

        <LinearLayout
            android:id="@+id/tvEkoA"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tvEkoNo"
            android:layout_toEndOf="@id/tvEkoNo"
            android:padding="6dp">

            <ImageView
                android:id="@+id/ivEkoA"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/seat_empty"
                android:textColor="@color/md_white_1000"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tvEkoB"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tvEkoA"
            android:layout_toEndOf="@id/tvEkoA"
            android:padding="6dp">

            <ImageView
                android:id="@+id/ivEkoB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/seat_empty"
                android:textColor="@color/md_white_1000"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tvEkoB"
            android:layout_toEndOf="@id/tvEkoB"
            android:padding="6dp">

            <ImageView
                android:id="@+id/ivEkoC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/seat_empty"
                android:textColor="@color/md_white_1000"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tvEkoE"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:padding="6dp">

            <ImageView
                android:id="@+id/ivEkoE"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/seat_empty"
                android:textColor="@color/md_white_1000"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/tvEkoE"
            android:layout_toStartOf="@id/tvEkoE"
            android:padding="6dp">

            <ImageView
                android:id="@+id/ivEkoD"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/seat_empty"
                android:textColor="@color/md_white_1000"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>