<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        android:clipChildren="false"
        android:paddingVertical="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/standard_margin"
            android:text="Pembayaran Berhasil"
            android:textColor="@color/md_green_600"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/standard_margin_2x"
            android:text="Transaksi pembayaran telah sukses" />

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginVertical="@dimen/standard_margin_2x"
            app:srcCompat="@drawable/ic_logo_paykaltimtara"/>

        <TextView
            android:id="@+id/tv_receipt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.1"
            android:text="Bukti  Pembayaran  QRIS"
            android:textAllCaps="true"
            android:textColor="@color/primaryText"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_payment_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/standard_margin"
            android:layout_marginTop="@dimen/standard_margin_2x"
            tools:itemCount="5"
            tools:listitem="@layout/item_payment_detail_scm" />

        <TextView
            android:id="@+id/tv_receipt_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_margin_2x"
            android:gravity="center_horizontal"
            android:text="Simpan Tanda Terima Ini\nSebagai Bukti Transfer yang Sah"
            android:textSize="@dimen/_12sdp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_print_receipt"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/standard_margin_2x"
            android:clipToPadding="false"
            android:text="Cetak Struk"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
            app:cornerRadius="15dp"
            app:icon="@drawable/ic_print_scm_white"
            app:iconGravity="textStart" />

        <LinearLayout
            android:id="@+id/ll_bottom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_margin_2x"
            android:background="@drawable/rounded_white_15dp_stroke_grey"
            android:orientation="horizontal"
            android:padding="@dimen/standard_margin_2x">

            <TextView
                android:id="@+id/tv_lbl_download"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="Download"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/standard_small_margin"
                android:background="@color/md_grey_600" />

            <TextView
                android:id="@+id/tv_lbl_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="Bagikan"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
