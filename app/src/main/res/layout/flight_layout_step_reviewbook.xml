<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewReviewBook"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/shape_card_edge_grey_fill_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"

                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Kode Booking"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/textKodeBookFlight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.2"

                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/md_black_1000"
                        tools:text="XXXXXX" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Time Limit"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/textBookLimitFlight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                android:layout_weight="1.2"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"

                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/md_red_500"
                    tools:text="19-Jun-2017 10:18" />
            </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_card_edge_grey_fill_white"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Rincian Perjalanan"
                            android:textColor="@color/colorPrimary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/textAirlineName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"

                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center_vertical"
                                android:textColor="@color/md_black_1000"
                                app:autoSizePresetSizes="@array/auto_size_text_sizes"
                                app:autoSizeTextType="uniform"
                                tools:targetApi="o"

                                tools:text="GARUDA" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textDetailTransitReview"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Detail"
                            android:textColor="@color/colorPrimary" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_card_edge_grey_fill_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"

                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1.2">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_alignParentTop="true"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/textOriginReview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@color/md_black_1000"
                                    app:autoSizePresetSizes="@array/auto_size_text_sizes"
                                    app:autoSizeTextType="uniform"
                                    tools:targetApi="o"

                                    tools:text="Jakarta (CGK)" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_alignParentBottom="true"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/textDestinationReview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    tools:text="Surabaya (SUB)"

                                    android:textColor="@color/md_black_1000"
                                    app:autoSizePresetSizes="@array/auto_size_text_sizes"
                                    app:autoSizeTextType="uniform"

                                    tools:ignore="HardcodedText"
                                    tools:targetApi="o" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="0.1">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/line_connector_vertical" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1.7">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_alignParentTop="true"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:id="@+id/textTimeDeptPay"
                                    android:layout_width="35dp"
                                    android:layout_height="wrap_content"

                                    android:background="@drawable/shape_blue"
                                    android:fontFamily="@font/roboto_regular"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:padding="2dp"
                                    tools:text="16:00"
                                    android:textColor="@android:color/white"
                                    app:autoSizePresetSizes="@array/auto_size_text_sizes"

                                    app:autoSizeTextType="uniform"
                                    tools:ignore="HardcodedText"
                                    tools:targetApi="o" />

                                <TextView
                                    android:id="@+id/textDateDeptPay"
                                    android:layout_width="match_parent"

                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginLeft="2dp"
                                    android:fontFamily="@font/roboto_regular"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    tools:text="Minggu, 19 Desember 2017"
                                    android:textColor="@color/md_black_1000"
                                    app:autoSizePresetSizes="@array/auto_size_text_sizes"
                                    app:autoSizeTextType="uniform"
                                    tools:ignore="HardcodedText"
                                    tools:targetApi="o" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_alignParentBottom="true"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textTimeArrPay"
                                    android:layout_width="35dp"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/shape_blue"
                                    android:fontFamily="@font/roboto_regular"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:padding="2dp"
                                    android:textColor="@android:color/white"
                                    app:autoSizePresetSizes="@array/auto_size_text_sizes"
                                    app:autoSizeTextType="uniform"

                                    tools:ignore="HardcodedText"
                                    tools:targetApi="o"
                                    tools:text="16:00" />

                                <TextView
                                    android:id="@+id/textDateArrPay"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginLeft="5dp"

                                    android:fontFamily="@font/roboto_regular"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textColor="@color/md_black_1000"
                                    app:autoSizePresetSizes="@array/auto_size_text_sizes"
                                    app:autoSizeTextType="uniform"

                                    tools:ignore="HardcodedText"
                                    tools:targetApi="o"
                                    tools:text="Minggu, 20 Desember 2017" />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_card_edge_grey_fill_white"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Penumpang"

                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/textPenumpangDewasa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="Nama Penumpang Dewasa"
                            android:textColor="@color/md_black_1000" />

                        <TextView
                            android:id="@+id/textPenumpangAnak"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:padding="5dp"
                            android:text="Nama Penumpang Anak"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/textPenumpangBayi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:padding="5dp"
                            android:text="Nama Penumpang Bayi"
                            android:visibility="gone" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_card_edge_grey_fill_white"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Tambahkan Asuransi"
                            android:textColor="@color/colorAccent" />

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Asuransi Perjalanan Equity Rp.68.200/penumpang" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_card_edge_grey_fill_white"
                   >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Harga Tiket"

                            android:textColor="@color/md_black_1000" />

                        <TextView
                            android:id="@+id/textHargaTiketPay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Rp. 0"
                            android:textColor="@color/md_black_1000" />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_card_edge_grey_fill_white"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Biaya Bagasi"

                            android:textColor="@color/md_black_1000" />

                        <TextView
                            android:id="@+id/textHargaBagasiPay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Rp. 0"
                            android:textColor="@color/md_black_1000" />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_card_edge_grey_fill_white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Biaya Admin"

                            android:textColor="@color/md_black_1000" />

                        <TextView
                            android:id="@+id/textBiayaAdminPay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Rp. 0"
                            android:textColor="@color/md_black_1000" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_blue">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Total Harga"

                            android:textColor="@color/md_white_1000" />

                        <TextView
                            android:id="@+id/textTotalPay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Rp. 0"

                            android:textColor="@color/md_white_1000" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_card_edge_grey_fill_white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Komisi"

                            android:textColor="@color/md_black_1000" />

                        <TextView
                            android:id="@+id/textKomisiPay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Rp. 0"

                            android:textColor="@color/md_black_1000" />
                    </RelativeLayout>
                </RelativeLayout>

