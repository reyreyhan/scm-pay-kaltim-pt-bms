<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_white_4dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/standard_margin_3x">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_check_circle_success_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_circle_success_bg"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/iv_check_circle_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_check_circle_success"
            android:layout_gravity="center"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/standard_margin_2x"
        android:layout_marginTop="@dimen/standard_margin_2x"
        android:gravity="center"
        android:maxLines="2"
        android:text="Selamat Pendaftaran Merchant Berhasil!"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/standard_margin_2x"
        android:layout_marginTop="@dimen/standard_margin"
        android:text="Merchant Anda akan mendapat QRIS setelah proses verifikasi selama 2x24 jam"
        android:gravity="center"
        android:textSize="@dimen/_12sdp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_positive"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:cornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
        android:theme="@style/Widget.MaterialComponents.Button"
        android:backgroundTint="@color/colorAccent"
        android:text="Baik, saya mengerti"
        android:clipToPadding="false"/>
</LinearLayout>