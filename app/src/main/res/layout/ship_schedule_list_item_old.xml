<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
   >
    <com.bm.main.fpl.templates.ticketview.TicketView
        android:id="@+id/ticketView"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="parent"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        app:ticketBorderColor="@color/colorAccent"
        app:ticketBorderWidth="1dp"
        app:ticketCornerType="rounded"
        app:ticketDividerPadding="20dp"
        app:ticketDividerType="dash"
        app:ticketElevation="8dp"
        app:ticketOrientation="vertical"
        app:ticketScallopPositionPercent="57"
        app:ticketScallopRadius="7dp"
        app:ticketShowBorder="true"
        app:ticketShowDivider="true" />
    <LinearLayout
        android:id="@+id/lin_main_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ticketView"
        app:layout_constraintLeft_toRightOf="@id/ticketView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="10dp"
        >

        <ProgressBar
            android:id="@+id/progressAvailShip"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:maxHeight="5dip"
            android:minHeight="5dip"
            android:indeterminateOnly="true"
            android:progressDrawable="@drawable/orangeprogress"
            android:visibility="gone"
            tools:visibility="visible"/>
        <TextView
            android:id="@+id/textViewShipName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotocondensed_regular"
            android:textColor="@color/md_black_1000"
            tools:text="KM NGAPULU (NP-120-8) EK1 / A"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:orientation="vertical">



                <LinearLayout
                    android:id="@+id/linMainTouch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"

                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1.2">

                        <TextView
                            android:id="@+id/textViewDepTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="04:40"

                            android:gravity="center_horizontal"
                            android:fontFamily="@font/robotocondensed_regular"
                            android:textColor="@color/md_black_1000"
                            android:textSize="@dimen/textMedium"/>

                        <TextView
                            android:id="@+id/textViewDepDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="20 Desember 2019"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/robotocondensed_regular"
                            android:textColor="@color/md_black_1000"
                            android:textSize="@dimen/textVerySmall"
                            android:gravity="center"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".4">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:src="@drawable/arrow_orange"
                            android:layout_centerInParent="true"
                            tools:ignore="ContentDescription" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1.2">

                        <TextView
                            android:id="@+id/textViewArvTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            tools:text="04:40"
                            android:textSize="@dimen/textMedium"
                            android:fontFamily="@font/robotocondensed_regular"
                            android:textColor="@color/md_black_1000" />

                        <TextView
                            android:id="@+id/textViewArvDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="20 Desember 2019"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/robotocondensed_regular"
                            android:textColor="@color/md_black_1000"
                            android:textSize="@dimen/textVerySmall"
                            android:gravity="center"/>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/relRoute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textViewRute"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rute"
                        android:fontFamily="@font/robotocondensed_regular"
                        android:textColor="@color/md_black_1000"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        />
                    <ImageView
                        android:id="@+id/imageViewDown"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/textViewRute"
                        android:layout_toEndOf="@id/textViewRute"
                        android:layout_width="30dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_down_primary"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:layout_gravity="center_vertical"
                        tools:ignore="ContentDescription" />
                    <ImageView
                        android:id="@+id/imageViewNext"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/textViewRute"
                        android:layout_toEndOf="@id/textViewRute"
                        android:layout_width="30dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_right_primary"
                        android:layout_gravity="center_vertical"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/relMainTouch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                >

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:weightSum="2"-->
                    <!--android:orientation="vertical">-->

                    <LinearLayout
                        android:id="@+id/lin_gender_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:orientation="horizontal"
                       >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="(Dewasa)"
                            android:textSize="@dimen/_9sdp"
                            android:fontFamily="@font/robotocondensed_regular"
                            android:textColor="@color/md_black_1000"
                            android:layout_weight="1.5"/>
                        <TextView
                            android:id="@+id/textViewPriceAdult"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Rp. 999.999,00"
                            android:textSize="@dimen/_9sdp"
                            android:fontFamily="@font/robotocondensed_regular"
                            android:textColor="@color/md_orange_500"
                            android:gravity="end"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:orientation="horizontal"-->
                        <!--android:layout_marginTop="5dp"-->
                        <!--android:visibility="invisible">-->
                        <!--<TextView-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="(Anak)"-->
                            <!--android:textSize="@dimen/textVerySmall"-->
                            <!--android:layout_weight="1.5"/>-->
                        <!--<TextView-->
                            <!--android:id="@+id/textViewPriceAdult"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--tools:text="Rp. 100.000,00"-->
                            <!--android:gravity="end"-->
                            <!--android:textSize="@dimen/textVerySmall"-->
                            <!--android:layout_weight="1"/>-->
                    <!--</LinearLayout>-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                     android:layout_below="@+id/lin_gender_top"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="(Bayi)"
                            android:textSize="@dimen/_9sdp"
                            android:fontFamily="@font/robotocondensed_regular"
                            android:textColor="@color/md_black_1000"
                            android:layout_weight="1.5"/>
                        <TextView
                            android:id="@+id/textViewPriceInfant"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Rp. 999.999,00"
                            android:gravity="end"
                            android:textSize="@dimen/_9sdp"
                            android:fontFamily="@font/robotocondensed_regular"
                            android:textColor="@color/md_orange_500"
                            android:layout_weight="1"/>
                    </LinearLayout>



                <!--</LinearLayout>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">


                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnPesan"
                                android:layout_width="wrap_content"
                                android:layout_height="23dp"
android:layout_gravity="center"

                                android:fontFamily="@font/robotocondensed_regular"
                                android:background="@drawable/selector_button_orange_small_pressed"
                                android:text="CEK TERSEDIA"
                                android:textSize="@dimen/_9sdp"
                                android:textAllCaps="false"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@android:color/white" />


                <TextView
                    android:id="@+id/textViewInfoAvail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                   android:layout_gravity="center"
                    android:fontFamily="@font/robotocondensed_regular"
                    android:textSize="@dimen/textVerySmall"
                    tools:text="untuk penumpang Pria"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                </LinearLayout>
                <FrameLayout android:id="@+id/frame_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    tools:visibility="visible">


                    <com.bm.main.fpl.templates.indicators.AVLoadingIndicatorView
                        android:id="@+id/avi"
                        style="@style/AVLoadingIndicatorView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"



                        android:layout_gravity="center"
                        app:indicatorColor="@color/colorPrimary" />
                </FrameLayout>
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textViewRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textVerySmall"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:fontFamily="@font/robotocondensed_regular"
            android:textColor="@color/md_black_1000"
            android:visibility="gone"
tools:visibility="visible"
            android:text="TANJUNG PERAK (SURABAYA)-MAKASAR-BITUNG"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>