<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">
    <FrameLayout android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/sw_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/fl_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <androidx.core.widget.NestedScrollView
                        android:id="@+id/ns_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true">
                        <LinearLayout
                            android:id="@+id/ll_content"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <LinearLayout
                                android:id="@+id/ll_header"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_rounded_bottom_success"
                                android:orientation="vertical"
                                android:padding="@dimen/standard_margin_2x">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="72dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/logo"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_checksucced"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/standard_margin_2x"
                                    android:gravity="center"
                                    android:text="Penjualan Berhasil"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/title"
                                    android:textStyle="bold"
                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginLeft="@dimen/standard_margin_3x"
                                    android:layout_marginTop="@dimen/standard_margin"
                                    android:layout_marginRight="@dimen/standard_margin_3x"
                                    android:layout_marginBottom="@dimen/standard_margin"
                                    android:background="@color/white"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Total Penjualan"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/subheading"
                                    android:textStyle="bold"
                                    />
                                <TextView
                                    android:id="@+id/tv_order"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/standard_margin"
                                    android:gravity="center"
                                    android:text="Rp 0"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/title"
                                    android:textStyle="bold"
                                    />
                                <LinearLayout
                                    android:visibility="gone"
                                    android:id="@+id/ll_info"
                                    android:layout_marginTop="@dimen/standard_margin"
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <LinearLayout
                                        android:visibility="gone"
                                        android:layout_gravity="center"
                                        android:id="@+id/ll_pay"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <TextView
                                            android:gravity="center"
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:background="@color/white"
                                            android:text="Total Pembayaran"
                                            android:textColor="@color/bg_header_success"
                                            android:textSize="@dimen/caption"
                                            />
                                        <TextView
                                            android:layout_gravity="center"
                                            android:id="@+id/tv_pay"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/standard_margin"
                                            android:gravity="center"
                                            android:text="Rp 0"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/subtitle"
                                            android:textStyle="bold"
                                            />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:visibility="gone"
                                        android:layout_marginLeft="@dimen/standard_margin_3x"
                                        android:id="@+id/ll_kembalian"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <TextView
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:background="@color/white"
                                            android:text="Kembalian"
                                            android:textColor="@color/bg_header_success"
                                            android:textSize="@dimen/caption"
                                            />
                                        <TextView
                                            android:id="@+id/tv_kembalian"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/standard_margin"
                                            android:gravity="center"
                                            android:text="Rp 0"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/subtitle"
                                            android:textStyle="bold"
                                            />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:visibility="gone"

                                        android:layout_gravity="center"
                                        android:id="@+id/ll_piutang"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <TextView
                                            android:gravity="center"
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:background="@color/white"
                                            android:text="Total Piutang"
                                            android:textColor="@color/bg_header_success"
                                            android:textSize="@dimen/caption"
                                            />
                                        <TextView
                                            android:layout_gravity="center"
                                            android:id="@+id/tv_piutang"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/standard_margin"
                                            android:gravity="center"
                                            android:text="Rp 0"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/subtitle"
                                            android:textStyle="bold"
                                            />
                                    </LinearLayout>
                                </LinearLayout>


                            </LinearLayout>
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Tanggal"
                                        android:textColor="@color/secondaryText"
                                        android:textSize="@dimen/body"
                                        />
                                    <TextView
                                        android:id="@+id/tv_date"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="-"
                                        android:textColor="@color/primaryText"
                                        android:textSize="@dimen/body"
                                        android:textStyle="bold"
                                        />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/standard_margin_2x"
                                        android:gravity="center"
                                        android:text="ID Transaksi"
                                        android:textColor="@color/secondaryText"
                                        android:textSize="@dimen/body"
                                        />
                                    <TextView
                                        android:id="@+id/tv_id"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="-"
                                        android:textColor="@color/primaryText"
                                        android:textSize="@dimen/body"
                                        android:textStyle="bold"
                                        />
                                </LinearLayout>
                            </FrameLayout>
                            <View android:layout_width="match_parent"
                                android:layout_height="144dp"/>
                        </LinearLayout>
                    </androidx.core.widget.NestedScrollView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/standard_margin_3x"
                        android:layout_marginRight="@dimen/standard_margin_3x"
                        android:layout_marginBottom="@dimen/standard_margin_2x"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/standard_margin">
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_share_social"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center_horizontal"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/btn_share_social"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/caption"
                                android:textStyle="bold"
                                />
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_print"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center_horizontal"
                                android:layout_marginStart="@dimen/standard_margin_3x"
                                android:layout_marginLeft="@dimen/standard_margin_3x"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/btn_print"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/caption"
                                android:textStyle="bold"/>
                        </LinearLayout>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_end"
                            android:layout_width="@dimen/standart_button_width"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:gravity="center"
                            android:text="@string/btn_end"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/subheading"
                            android:textStyle="bold"
                            app:backgroundTint="@color/orange"
                            />
                    </LinearLayout>
                </FrameLayout>
                <LinearLayout
                    android:id="@+id/ll_error"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_err_search"/>
                    <TextView
                        android:id="@+id/tv_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/standard_margin_2x"
                        android:layout_marginTop="@dimen/standard_margin"
                        android:layout_marginRight="@dimen/standard_margin_2x"
                        android:gravity="center"
                        android:text="Invoice tidak ditemukan"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/subtitle"
                        android:textStyle="bold"/>
                </LinearLayout>

            </FrameLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>