<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp" app:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/linearLayoutItemPelanggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/shape_card_edge_grey"
        android:orientation="vertical">
<ImageView android:id="@+id/imageViewTrash"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_margin="2dp"

    android:layout_gravity="end|top" android:src="@drawable/ic_trash"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"  android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:weightSum="2">

            <com.bm.main.fpl.templates.TextViewPlus
                android:id="@+id/imageViewProduk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="123456789012"
                android:textSize="@dimen/textSmall"
                 />

            <com.bm.main.fpl.templates.TextViewPlus
                android:id="@+id/textViewPlusNamaProduk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="123456789012"
                android:textSize="@dimen/textSmall"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="3dp"
            android:weightSum="2">

            <com.bm.main.fpl.templates.TextViewPlus
                android:id="@+id/textViewPlusNamaPel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="nama nya siapa"
                android:textSize="@dimen/textSmall"
                 />

            <com.bm.main.fpl.templates.TextViewPlus
                android:id="@+id/textViewPlusAdditional"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="alamatnya dimana"
                android:textSize="@dimen/textSmall"
                app:customFont="@font/roboto_light" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>