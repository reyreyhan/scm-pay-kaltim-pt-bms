<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/standard_margin_2x"
              android:paddingRight="@dimen/standard_margin_2x"
              android:paddingTop="@dimen/standard_margin"
              android:paddingBottom="@dimen/standard_margin"
              android:background="@color/primaryText">

    <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_header_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/body"
            android:textColor="@color/white"/>
    <LinearLayout
            android:layout_marginLeft="@dimen/standard_margin_4x"
            android:layout_marginStart="@dimen/standard_margin_4x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/caption"
                    android:textColor="@color/white"
                    android:text="Jml. Transaksi : "/>
            <TextView
                    android:gravity="end"
                    android:id="@+id/tv_header_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/caption"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="@dimen/standard_small_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/caption"
                    android:textColor="@color/white"
                    android:text="Jml. Omzet : "/>
            <TextView
                    android:gravity="end"
                    android:id="@+id/tv_header_omset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/caption"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="@dimen/standard_small_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/caption"
                    android:textColor="@color/white"
                    android:text="Jml. Profit : "/>
            <TextView
                    android:gravity="end"
                    android:id="@+id/tv_header_profit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/caption"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>