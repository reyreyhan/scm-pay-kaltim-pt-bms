<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/standard_margin_2x"
            android:paddingRight="@dimen/standard_margin_2x"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="@dimen/_64sdp"
                    android:layout_height="@dimen/_64sdp"
                    app:srcCompat="@drawable/ic_foto_akun"
                    android:background="@drawable/circle_white"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_marginTop="@dimen/standard_margin_3x"/>

                <TextView
                    android:id="@+id/btn_ganti_foto"
                    android:layout_marginTop="@dimen/standard_margin_2x"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Ganti Foto Profile"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/caption"
                    />

                <LinearLayout
                    android:layout_marginTop="@dimen/standard_margin_3x"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/standard_margin_2x"
                        android:text="@string/lbl_name"
                        android:textSize="@dimen/body"
                        android:textColor="@color/secondaryText" />
                    <EditText
                        android:layout_marginLeft="@dimen/standard_margin"
                        android:padding="@dimen/standard_margin_2x"
                        android:layout_gravity="center"
                        android:inputType="textPersonName"
                        android:id="@+id/et_name"
                        android:textColorHint="@color/secondaryText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/body"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/standard_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/standard_margin_2x"
                        android:text="@string/lbl_email"
                        android:textSize="@dimen/body"
                        android:textColor="@color/secondaryText"
                        />
                    <EditText
                        android:layout_marginLeft="@dimen/standard_margin"
                        android:padding="@dimen/standard_margin_2x"
                        android:layout_gravity="center"
                        android:inputType="textEmailAddress"
                        android:id="@+id/et_email"
                        android:textColorHint="@color/secondaryText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/body"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/standard_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/standard_margin_2x"
                        android:text="@string/lbl_phone_2"
                        android:textSize="@dimen/body"
                        android:textColor="@color/secondaryText"
                        />
                    <EditText
                        android:layout_marginLeft="@dimen/standard_margin"
                        android:padding="@dimen/standard_margin_2x"
                        android:layout_gravity="center"
                        android:inputType="number"
                        android:maxLength="16"
                        android:id="@+id/et_phone"
                        android:textColorHint="@color/secondaryText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/body"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/standard_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/standard_margin_2x"
                        android:text="@string/lbl_address"
                        android:textSize="@dimen/body"
                        android:textColor="@color/secondaryText"
                        />
                    <EditText
                        android:layout_marginLeft="@dimen/standard_margin"
                        android:padding="@dimen/standard_margin_2x"
                        android:layout_gravity="center"
                        android:inputType="number"
                        android:maxLength="16"
                        android:id="@+id/et_address"
                        android:textColorHint="@color/secondaryText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/body"
                        />
                </LinearLayout>
                <TextView
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/standard_margin_2x"
                    android:layout_marginTop="@dimen/standard_margin_2x"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Keamanan"
                    android:textSize="@dimen/body"
                    android:textColor="@color/secondaryText"/>
                <TextView
                    android:visibility="gone"
                    android:clickable="true"
                    android:layout_marginTop="@dimen/standard_small_margin"
                    android:paddingLeft="@dimen/standard_margin_2x"
                    android:paddingRight="@dimen/standard_margin"
                    android:paddingTop="@dimen/standard_margin"
                    android:paddingBottom="@dimen/standard_margin"
                    android:layout_gravity="center"
                    android:id="@+id/btn_password"
                    android:textColorHint="@color/secondaryText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/standart_input_height"
                    android:background="@drawable/rounded_white_4dp_stroke_gray"
                    android:textColor="@color/secondaryText"
                    android:textSize="@dimen/body"
                    android:textAllCaps="true"
                    android:text="Ubah Password"
                    android:textStyle="bold"
                    android:drawableRight="@drawable/selector_next"
                    android:drawableEnd="@drawable/selector_next"
                    android:drawablePadding="@dimen/standard_xsmall_margin"
                    android:focusable="true"/>
                <!--                <View-->
                <!--                    android:id="@+id/empty_space"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="0dp"-->
                <!--                    android:layout_weight="1"/>-->
            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="@dimen/standard_margin_3x"
                android:layout_marginBottom="@dimen/standard_margin_2x"
                android:id="@+id/btn_save"
                android:layout_width="@dimen/standart_button_width"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/subheading"
                android:text="@string/btn_save"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingVertical="@dimen/standard_margin"
                app:backgroundTint="@color/md_red_A700"
                />
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>