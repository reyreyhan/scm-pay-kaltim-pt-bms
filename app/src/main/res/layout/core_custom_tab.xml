<?xml version="1.0" encoding="utf-8"?><!--<TextView xmlns:android="http://schemas.android.com/apk/res/android"--><!--xmlns:tools="http://schemas.android.com/tools"--><!--android:layout_width="48dp"--><!--android:layout_height="48dp"--><!--android:id="@+id/tab"--><!--android:textColor="@color/colorAccent_ppob"--><!--android:textSize="@dimen/tab_label"--><!--android:fontFamily="fonts/Roboto-Light.ttf"--><!--tools:ignore="UnusedAttribute" />-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/iconTab"
        android:layout_width="48dp"
        android:layout_height="48dp"
        tools:ignore="ContentDescription"
        android:src="@drawable/ic_train"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/md_grey_500"
        android:textSize="@dimen/textSmall"
        android:fontFamily="fonts/Roboto-Light.ttf"
        android:layout_gravity="center"
        android:text="Pesawat"/>
</LinearLayout>