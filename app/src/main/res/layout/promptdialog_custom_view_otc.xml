<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
android:orientation="vertical"
    android:gravity="center">

    <!--<RelativeLayout-->

        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="center_horizontal">-->

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardBackgroundColor="@color/colorTransparent"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:id="@+id/contentHost">

                <TextView
                    android:id="@+id/dialog_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="5dp"
                    android:text="Kode OTP sudah terkirim via sms ke HP Anda"

                    android:textColor="@color/md_black_1000"
                    android:textSize="@dimen/textNormalCaption"
                    tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.bm.main.materialedittext.MaterialEditText
                    android:id="@+id/editTextOTC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"

                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ 01234567890"
                    android:textCursorDrawable="@drawable/text_cursor_accent"
                    android:textSize="@dimen/textNormal"
                    android:maxLength="10"
                    android:fontFamily="@font/roboto_light"
                    app:met_baseColor="@color/text_secondary"
                    app:met_floatingLabel="highlight"

                    app:met_floatingLabelTextColor="@color/md_black_1000"
                    app:met_floatingLabelAnimating="true"
                    app:met_accentTypeface="@string/roboto_regular"

                    app:met_underlineColor="@color/md_grey_500"
                    app:met_primaryColor="@color/colorAccent_ppob"
                    app:met_singleLineEllipsis="true"
                    app:met_clearButton="true"


                    android:hint="One Time Code" />
                <ImageView
                    android:id="@+id/imageViewOtp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_otp"
                    android:layout_gravity="center"

                    android:layout_marginLeft="-20dp"
                    android:layout_marginStart="-20dp"
                    android:adjustViewBounds="true" android:visibility="gone"/>
            </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/dialog_positive_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/selector_button_blue_pressed"
                        android:text="OK"

                        android:textColor="@color/md_white_1000"
                        tools:ignore="HardcodedText" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/dialog_negative_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"

                        android:layout_alignParentTop="true"

                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="104dp"
                        android:layout_marginRight="104dp"
                        android:background="@drawable/selector_button_blue_white_pressed"
                        android:text="Batal"
                        android:textColor="@color/md_blue_500"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    <!--</RelativeLayout>-->
</LinearLayout>