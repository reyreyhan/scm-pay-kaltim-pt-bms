<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_bayar_hutang"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp"
    android:layout_marginLeft="@dimen/standard_margin_3x"
    android:layout_marginTop="@dimen/standard_margin"
    android:layout_marginRight="@dimen/standard_margin_3x"
    android:gravity="right"
    android:orientation="horizontal"
    android:weightSum="2">

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginRight="@dimen/standard_margin"
        android:layout_weight="1.1"
        android:gravity="right|center_vertical"
        android:text="Data Pelanggan"
        android:textSize="@dimen/_13sdp" />

    <TextView
        android:id="@+id/et_data_pelanggan"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/standard_margin"
        android:layout_weight="0.9"
        android:background="@drawable/rounded_white_4dp_stroke_gray"
        android:drawablePadding="@dimen/standard_margin"
        android:gravity="end"
        android:padding="@dimen/_8sdp"
        android:textStyle="bold"
        app:drawableRightCompat="@drawable/ic_penjualan_daftar_pelanggan"
        tools:text="Test" />
</LinearLayout>