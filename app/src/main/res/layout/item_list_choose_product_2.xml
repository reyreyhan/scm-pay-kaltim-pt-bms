<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingTop="@dimen/standard_margin"
    android:paddingBottom="@dimen/standard_margin"
    android:background="@drawable/selector_item_white"
    android:id="@+id/ll_wrapper">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/standard_margin_2x">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_photo"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:elevation="@dimen/_2sdp"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="@dimen/subheading"
                    android:textColor="@color/primaryText"
                    android:textStyle="bold"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:gravity="center"
                    android:background="@drawable/rounded_white_4dp_stroke_gray"
                    android:padding="@dimen/_1sdp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_9sdp"
                    tools:text="9"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_kode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/orange"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textSize="@dimen/_10sdp"
                    tools:text="Rp 8.000 - Rp 10.000"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_marginLeft="@dimen/standard_margin"
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:gravity="end"
            android:textSize="@dimen/body"
            android:textColor="@color/primaryText"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>