<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="310dp"
    android:orientation="vertical"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:orientation="vertical"
        android:weightSum="3"
        tools:ignore="UselessParent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent"
            android:text="TAMBAHKAN PENUMPANG"
            android:textSize="@dimen/textVerySmall"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/md_white_1000"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="211dp"
            android:baselineAligned="true"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal"
            android:background="@color/md_white_1000"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/title_header_picker_flight_adult"
                        android:textColor="@color/text_secondary"
android:fontFamily="@font/roboto_medium"

                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/title_subheader_picker_flight_adult"
                        android:textSize="@dimen/textSmall"
                        android:fontFamily="@font/roboto_regular"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:ignore="NestedWeights">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_adult"
                        tools:ignore="ContentDescription" />
                    <RelativeLayout
                        android:layout_width="match_parent"


                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/selector_button_blue_grey_50_pressed">
                    <com.bm.main.fpl.templates.MaterialNumberPicker
                        android:id="@+id/jumlahDewasa"
                        android:layout_width="match_parent"


                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        app:npDefaultValue="1"

                        app:npMaxValue="7"
                        app:npMinValue="1"
                        app:npBackgroundColor="@color/md_grey_50"
                        app:npFocusValue="true"
                        app:npSeparatorColor="@color/md_blue_500"

                        app:npTextColor="@color/text_secondary"
                        app:npTextSize="@dimen/textMedium"
                        app:npWrapValue="false"
                        tools:ignore="NestedWeights" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/title_header_picker_flight_child"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/roboto_medium"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/title_subheader_picker_flight_child"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/textSmall"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:ignore="NestedWeights">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_child"
                        tools:ignore="ContentDescription" />
                    <RelativeLayout
                        android:layout_width="match_parent"


                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/selector_button_blue_grey_50_pressed">
                    <com.bm.main.fpl.templates.MaterialNumberPicker
                        android:id="@+id/jumlahAnak"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:layout_gravity="center_vertical"
                        app:npDefaultValue="0"
                        app:npMaxValue="6"
                        app:npBackgroundColor="@color/md_grey_50"
                        app:npFocusValue="true"
                        app:npSeparatorColor="@color/md_blue_500"
                        app:npMinValue="0"
                        app:npTextColor="@color/text_secondary"
                        app:npTextSize="@dimen/textMedium"
                        app:npWrapValue="false"
                        tools:ignore="NestedWeights" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/title_header_picker_flight_baby"
                        android:textColor="@color/text_secondary"
                      android:fontFamily="@font/roboto_medium"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/title_subheader_picker_flight_baby"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/textSmall"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:ignore="NestedWeights">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_baby"
                        tools:ignore="ContentDescription" />
                    <RelativeLayout
                        android:layout_width="match_parent"


                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/selector_button_blue_grey_50_pressed">
                    <com.bm.main.fpl.templates.MaterialNumberPicker
                        android:id="@+id/jumlahBayi"
                        android:layout_width="match_parent"


                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        app:npDefaultValue="0"
                        app:npBackgroundColor="@color/md_grey_50"
                        app:npFocusValue="true"
                        app:npSeparatorColor="@color/md_blue_500"

                        app:npMaxValue="4"
                        app:npMinValue="0"
                        app:npTextColor="@color/text_secondary"
                        app:npTextSize="@dimen/textMedium"
                        app:npWrapValue="false"
                        tools:ignore="NestedWeights" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_white_1000"

            android:baselineAligned="true"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_batal"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_button_orange_white_pressed"
                android:layout_gravity="center"

                android:layout_margin="5dp"


                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/textNormal"


                android:text="Batal"
                android:textColor="@color/md_orange_500"

                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_pilih"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_button_orange_pressed"
                android:layout_gravity="center"

                android:layout_margin="5dp"


                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/textNormal"


                android:text="Pilih"
                android:textColor="@color/md_white_1000"
                tools:ignore="HardcodedText" />


        </LinearLayout>

        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="bottom"-->
        <!--android:orientation="vertical">-->

        <FrameLayout
            android:id="@+id/toast_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />
        <!--</LinearLayout>-->
    </LinearLayout>

</FrameLayout>