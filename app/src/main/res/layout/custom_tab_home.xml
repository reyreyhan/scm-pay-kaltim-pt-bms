<?xml version="1.0" encoding="utf-8"?><!--<TextView xmlns:android="http://schemas.android.com/apk/res/android"--><!--xmlns:tools="http://schemas.android.com/tools"--><!--android:layout_width="48dp"--><!--android:layout_height="48dp"--><!--android:id="@+id/tab"--><!--android:textColor="@color/colorAccent_ppob"--><!--android:textSize="@dimen/tab_label"--><!--android:fontFamily="fonts/Roboto-Light.ttf"--><!--tools:ignore="UnusedAttribute" />-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/colorTransparent"
    android:layout_centerInParent="true"
    android:orientation="vertical"

    android:gravity="center">


    <ImageView
        android:id="@+id/imageViewTab"
        android:layout_width="14dp"
        android:layout_height="14dp"
        foo:srcCompat="@drawable/ic_home"
        android:adjustViewBounds="true"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/textTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"


        android:gravity="center"
        android:fontFamily="@font/roboto_light"
        android:text="Beranda"
        android:textColor="@color/md_white_1000"
        android:textSize="@dimen/textSmall"
        tools:ignore="HardcodedText" />

</LinearLayout>