<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Perangkat yang belum terpasang" android:gravity="center|center_vertical"
    android:layout_gravity="center" android:visibility="gone"/>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_pair"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/selector_button_grey_pressed"
            android:fontFamily="@font/roboto_light"
            android:text="@string/text_pair"
            android:textAllCaps="false"
            android:textColor="@color/md_black_1000"
            android:textSize="@dimen/textNormal" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_pair"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_toStartOf="@+id/btn_pair"
            android:layout_toLeftOf="@+id/btn_pair"
            android:fontFamily="@font/roboto_light"
            android:text="Galaxy Nexus"
            android:textAllCaps="false"
            android:textColor="@color/md_black_1000"
            android:textSize="@dimen/textNormalCaption" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_pair"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_toStartOf="@+id/btn_pair"
            android:layout_toLeftOf="@+id/btn_pair"
            android:fontFamily="@font/roboto_light"
            android:text="000000000"
            android:textSize="@dimen/textNormal" />

    </RelativeLayout>
</LinearLayout>