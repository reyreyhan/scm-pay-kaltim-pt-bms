<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context="com.bm.main.fpl.activities.NotificationTopSingleActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_color_primary" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_margin="@dimen/activity_horizontal_margin" android:orientation="vertical">
    <TextView
        android:id="@+id/textViewJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Judul Promo"
        android:gravity="center"
        android:scrollHorizontally="false"
        android:ellipsize="none"
        android:textSize="@dimen/textNormalCaption"
        />

        <FrameLayout
            android:id="@+id/framePromo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            >
            <!--<android.support.v7.widget.CardView-->
            <!--android:id="@+id/cardPromo"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->

            <!--app:cardBackgroundColor="@color/cardview_light_background"-->
            <!--app:cardCornerRadius="5dp">-->

            <ImageView
                android:id="@+id/imageViewNotif"
                android:layout_width="match_parent"
                android:layout_height="170dp"



                tools:src="@drawable/promo_landscape"
                tools:ignore="ContentDescription" />
            <!--</android.support.v7.widget.CardView>-->
            <com.bm.main.fpl.templates.indicators.AVLoadingIndicatorView
                android:id="@+id/avi"
                style="@style/AVLoadingIndicatorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                app:indicatorColor="@color/colorPrimary_ppob" />
        </FrameLayout>
    <TextView
        android:id="@+id/textViewContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Judul Promo"
        android:gravity="center"
        android:scrollHorizontally="false"
        android:ellipsize="none"
        android:textSize="@dimen/textSmall"
        />
    </LinearLayout>
</LinearLayout>