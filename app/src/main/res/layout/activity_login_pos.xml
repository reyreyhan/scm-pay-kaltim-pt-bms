<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/standard_margin_3x"
            android:layout_marginRight="@dimen/standard_margin_3x"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/logo" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/ic_login_image" />
            <!--
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/standard_margin_2x"
                                android:gravity="center"
                                android:text="@string/lbl_tagline_1"
                                android:textColor="@color/primaryText"
                                android:textSize="@dimen/subheading"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/lbl_tagline_2"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/body" />
            -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin_4x"
                android:layout_marginBottom="@dimen/standard_margin"
                android:text="Nomor Handphone"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="@dimen/title"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/standard_margin_2x"
                android:background="@drawable/rounded_white_4dp_stroke_gray">
                <EditText
                    android:id="@+id/et_no_hp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/standard_margin"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/lbl_phone_login"
                    android:inputType="number"
                    android:maxLength="16"
                    android:textColor="@color/primaryText"
                    android:textColorHint="@color/secondaryText"
                    android:textSize="@dimen/subheading" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin"
                android:layout_marginBottom="@dimen/standard_margin"
                android:text="Password"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="@dimen/title"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/standard_margin_2x"
                android:background="@drawable/rounded_white_4dp_stroke_gray">
                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/standard_margin"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/lbl_password_login"
                    android:inputType="textPassword"
                    android:textColor="@color/primaryText"
                    android:textColorHint="@color/secondaryText"
                    android:textSize="@dimen/subheading" />

                <CheckBox
                    android:id="@+id/btn_show_password"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginLeft="@dimen/standard_margin"
                    android:button="@drawable/selector_password"
                    android:checked="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/standard_margin"
                android:layout_marginBottom="@dimen/standard_margin_2x"
                android:layout_gravity="right"
                android:gravity="center">
                <TextView
                    android:id="@+id/btn_bantuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bantuan"
                    android:textColor="@color/primaryText"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginRight="@dimen/standard_margin"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_login"
                    android:layout_width="@dimen/standart_button_small_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/standard_margin"
                    android:enabled="true"
                    android:gravity="center"
                    android:text="@string/btn_login"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/subheading"
                    android:textStyle="bold"
                    android:backgroundTint="@color/md_red_A700" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/standard_margin"
                android:layout_marginBottom="@dimen/standard_margin_2x"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Belum memiliki akun?"
                    android:textColor="@color/secondaryText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/standard_small_margin"
                    android:text="Daftar Sekarang"
                    android:textColor="@color/primaryText"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:srcCompat="@drawable/ic_bg_login_footer"
        android:scaleType="center"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>