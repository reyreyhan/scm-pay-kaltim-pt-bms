             -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin_3x"
                android:text="@string/lbl_full_name"
                android:textAllCaps="true"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/body"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/standart_input_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/standard_small_margin"
                android:background="@drawable/rounded_white_4dp_stroke_gray"
                android:hint="@string/lbl_name_hint"
                android:inputType="textPersonName"
                android:padding="@dimen/standard_margin"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/secondaryText"
                android:textSize="@dimen/body" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin"
                android:text="@string/lbl_phone"
                android:textAllCaps="true"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/body"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/standart_input_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/standard_small_margin"
                android:background="@drawable/rounded_white_4dp_stroke_gray"
                android:hint="@string/lbl_phone_hint"
                android:inputType="number"
                android:maxLength="16"
                android:padding="@dimen/standard_margin"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/secondaryText"
                android:textSize="@dimen/body" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin"
                android:text="@string/lbl_email"
                android:textAllCaps="true"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/body"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_mail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/standart_input_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/standard_small_margin"
                android:background="@drawable/rounded_white_4dp_stroke_gray"
                android:hint="@string/lbl_email_hint"
                android:inputType="textEmailAddress"
                android:padding="@dimen/standard_margin"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/secondaryText"
                android:textSize="@dimen/body" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin"
                android:text="@string/lbl_nama_toko"
                android:textAllCaps="true"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/body"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_nama_toko"
                android:layout_width="match_parent"
                android:layout_height="@dimen/standart_input_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/standard_small_margin"
                android:background="@drawable/rounded_white_4dp_stroke_gray"
                android:hint="@string/lbl_nama_toko_hint"
                android:inputType="text"
                android:padding="@dimen/standard_margin"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/secondaryText"
                android:textSize="@dimen/body" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin"
                android:text="@string/lbl_address"
                android:textAllCaps="true"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/body"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/standard_small_margin"
                android:background="@drawable/rounded_white_4dp_stroke_gray"
                android:gravity="top"
                android:hint="@string/lbl_address_hint"
                android:inputType="textPostalAddress"
                android:maxLength="100"
                android:padding="@dimen/standard_margin"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/secondaryText"
                android:textSize="@dimen/body" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/standard_margin_3x"
                android:layout_marginBottom="@dimen/standard_margin"
                android:background="@color/divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin"
                android:text="@string/lbl_province"
                android:textAllCaps="true"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/body"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_province"
                android:layout_width="match_parent"
                android:layout_height="@dimen/standart_input_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/standard_small_margin"
                android:background="@drawable/rounded_white_4dp_stroke_gray"
                android:drawableEnd="@drawable/selector_dropdown"
                android:drawableRight="@drawable/selector_dropdown"
                android:drawablePadding="@dimen/standard_xsmall_margin"
                android:hint="Pilih Provinsi"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:padding="@dimen/standard_margin"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/secondaryText"
                android:textSize="@dimen/body" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin"
                android:text="@string/lbl_city"
                android:textAllCaps="true"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/body"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_city"
                android:layout_width="match_parent"
                android:layout_height="@dimen/standart_input_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/standard_small_margin"
                android:background="@drawable/rounded_white_4dp_stroke_gray"
                android:drawableEnd="@drawable/selector_dropdown"
                android:drawableRight="@drawable/selector_dropdown"
                android:drawablePadding="@dimen/standard_xsmall_margin"
                android:hint="@string/hint_pilih_kabupaten"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:padding="@dimen/standard_margin"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/secondaryText"
                android:textSize="@dimen/body" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin"
                android:text="@string/lbl_district"
                android:textAllCaps="true"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/body"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_district"
                android:layout_width="match_parent"
                android:layout_height="@dimen/standart_input_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/standard_small_margin"
                android:background="@drawable/rounded_white_4dp_stroke_gray"
                android:drawableEnd="@drawable/selector_dropdown"
                android:drawableRight="@drawable/selector_dropdown"
                android:drawablePadding="@dimen/standard_xsmall_margin"
                android:hint="@string/hint_pilih_kecamatan"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:padding="@dimen/standard_margin"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/secondaryText"
                android:textSize="@dimen/body" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin"
                android:text="@string/lbl_postcode"
                android:textAllCaps="true"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/body"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_postcode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/standart_input_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/standard_small_margin"
                android:background="@drawable/rounded_white_4dp_stroke_gray"
                android:drawableEnd="@drawable/selector_dropdown"
                android:drawableRight="@drawable/selector_dropdown"
                android:drawablePadding="@dimen/standard_xsmall_margin"
                android:hint="@string/hint_pilih_kodepos"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:padding="@dimen/standard_margin"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/secondaryText"
                android:textSize="@dimen/body" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_register_now"
                android:layout_width="@dimen/standart_button_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/standard_margin_4x"
                android:background="@color/md_red_A700"
                android:backgroundTint="@color/md_red_A700"
                android:gravity="center"
                android:text="@string/btn_register"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/subheading"
                android:textStyle="bold"
                app:backgroundTint="@color/md_red_A700" />
            <!-- <LinearLayout
                 android:layout_marginBottom="@dimen/standard_margin_2x"
                 android:id="@+id/btn_login" android:layout_marginTop="@dimen/standard_margin"
                 android:gravity="center" android:layout_gravity="center"
                 android:layout_width="wrap_content" android:layout_height="wrap_content">
                 <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:text="Sudah punya akun" android:textColor="@color/secondaryText"/>
                 <TextView android:layout_marginLeft="@dimen/standard_small_margin" android:textStyle="bold"
                     android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:text="Login disini" android:textColor="@color/colorAccent_ppob"
                     android:textAllCaps="true"/>
             </LinearLayout>-->
        </LinearLayout>
    </ScrollView>
</LinearLayout>